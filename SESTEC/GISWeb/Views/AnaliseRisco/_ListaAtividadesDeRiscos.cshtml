@using GISModel.Entidades
@using GISModel.DTO.AnaliseRisco
@model List<AnaliseRiscosViewModel>


@{
    /**/


    if (Model.Count > 0)
    {

        <div class="row">
            <div class="col-xs-12">
                <div class="clearfix">
                    <div class="pull-right tableTools-container"></div>
                </div>

                <div>
                    <table id="tablePerfisPorMenu" class="table table-striped table-bordered table-hover">
                        <thead>
                            <tr>

                                <th>
                                    Ambientes
                                </th>

                                <th>
                                    Riscos
                                </th>
                                <th>
                                    Possíveis Danos
                                </th>
                                <th class="center">

                                    Domina a Atividade
                                </th>
                                <th class="center">

                                    Sente-se Bem?
                                </th>
                                <th class="center">
                                    Salvar
                                </th>

                            </tr>  
                           
                        </thead>
                        

                        <tbody>

                            @foreach (AnaliseRiscosViewModel item in Model)
                            {
                            <tr>

                                <td>
                                    @item.DescricaoAtividade
                                </td>

                                <td>
                                    @item.Riscos
                                </td>
                                <td>
                                    @item.PossiveisDanos
                                </td>
                                <td class="center">
                                    <i class="ace-icon fa fa-smile-o bigger-140" style="color:green"></i>
                                    <br/>
                                    <label class="pos-rel">
                                        
                                        <input type="checkbox" name="conhecimento" id="@item.Conhecimento"class="ace">
                                        <span class="lbl"></span>
                                    </label>
                                </td>
                                <td class="center">
                                    <i class="ace-icon fa fa-smile-o bigger-140" style="color:green"></i>
                                    <br/>
                                    <label class="pos-rel">

                                        <input type="checkbox" name="bemEstar" id="@item.BemEstar" class="ace">
                                        @{
                                            string PossuiOMenu1 = string.Empty;
                                            if (item.BemEstar)
                                            {
                                                item.BemEstar = true;
                                            }
                                        }
                                        <span class="lbl" title="Me sinto bem!"></span>

                                    </label>


                                </td>

                                <td class="center">
                                    <label class="pos-rel">

                                        @{
                                            string PossuiOMenu = string.Empty;
                                            if (item.AlocaAtividade)
                                            {
                                                PossuiOMenu = " checked=\" ";
                                            }
                                        }
                                        <br/>
                                        <input type="checkbox" onclick="SalvarAnaliseRisco(this.checked, '@item.IDAtividadeEstabelecimento','@item.IDAlocacao','@item.BemEstar','@item.Conhecimento');" @PossuiOMenu class="ace">
                                        <span class="lbl"></span>
                                    </label>
                                </td>

                            </tr>


                            }



                        </tbody>
                    </table>
                </div>
            </div>
        </div>

    }
    else
    {
        <div class="row">
            <div class="col-xs-12">
                <div class="error-container" style="margin: 0;">
                    <div class="well">
                        <h4 class="blue" style="margin: 0;">
                            <i class="ace-icon fa fa-slack bigger-110"></i>
                            Nenhum perfil encontrado
                        </h4>
                    </div>
                </div>
            </div><!-- /.col -->
        </div>
    }

}


